{
	"conditions":{
	    "notSkuBundle":{
	        "bundleFlag":{"eq":0}
	    },  
    	"isGiftCardSku":{
    		"product": {"method":"isGiftCardSku"}
    	},
    	"eventSku":{
	    	"baseProductType":	{"eq":"event"},
	    	"bundleFlag":		{"eq":0}
 	    },
 	    "trackedByMeasurement":{
 	    	"inventoryTrackBy": {"neq":"Quantity"}
		}
	},
	"properties":{
		"defaultFlag":				[{"contexts":"delete,setAsDefaultSku","eq":false}],
		"listPrice":				[{"contexts":"save,optionRemoval","dataType":"numeric","minValue":0}],
		"options":					[
			{"contexts":"save","method":"hasUniqueOptions","conditions":"notSkuBundle"},
			{"contexts":"save","method":"hasOneOptionPerOptionGroup"}
		],
		"price":			   		[{"contexts":"save,optionRemoval","required":true,"dataType":"numeric","minValue":0}],
		"product":					[{"contexts":"save,optionRemoval","required":true}],
		"renewalPrice":				[{"contexts":"save,optionRemoval","dataType":"numeric","minValue":0}],
		"skuCode":					[{"contexts":"save,optionRemoval","required":true,"unique":true,"regex":"^[a-zA-Z0-9-_.|:~^]+$"}],
		"redemptionAmount":			[{"conditions":"isGiftCardSku", "dataType":"numeric","minValue":0}],
		"redemptionAmountType":     [{"conditions":"isGiftCardSku", "required":true}],
		"transactionExistsFlag":	[{"contexts":"delete","eq":false}],
		"physicalCounts":			[{"contexts":"delete","maxCollection":0}],
		"eventConflictExistsFlag":  [{"contexts":"save,optionRemoval","conditions":"eventSku","eq":false}],
		"measurementUnitID":	[{"contexts":"save,optionRemoval","conditions":"trackedByMeasurement","required":true}]
	}
}